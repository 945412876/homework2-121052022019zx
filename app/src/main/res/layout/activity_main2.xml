<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="#333333"
    android:padding="16dp">

    <!-- Title Row -->
    <TableRow>
        <TextView
            android:text="Hello TableLayout"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:padding="16dp"
            android:background="#444444"
            android:layout_span="2" />
    </TableRow>

    <!-- First Divider Line -->
    <TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_span="2" />
    </TableRow>

    <!-- Menu Items -->
    <TableRow>
        <TextView
            android:text="Open..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:text="Ctrl-O"
            android:textColor="#CCCCCC"
            android:gravity="right"
            android:padding="8dp"
            android:textSize="16sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Save..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:text="Ctrl-S"
            android:textColor="#CCCCCC"
            android:gravity="right"
            android:padding="8dp"
            android:textSize="16sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Save As..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:text="Ctrl-Shift-S"
            android:textColor="#CCCCCC"
            android:gravity="right"
            android:padding="8dp"
            android:textSize="16sp" />
    </TableRow>

    <!-- Second Divider Line -->
    <TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_span="2" />
    </TableRow>

    <!-- More Menu Items -->
    <TableRow>
        <TextView
            android:text="X Import..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:text="Ctrl-I"
            android:textColor="#CCCCCC"
            android:gravity="right"
            android:padding="8dp"
            android:textSize="16sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="X Export..."
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:text="Ctrl-E"
            android:textColor="#CCCCCC"
            android:gravity="right"
            android:padding="8dp"
            android:textSize="16sp" />
    </TableRow>
    <!-- Second Divider Line -->
    <TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_span="2" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Quit"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:text=""
            android:padding="8dp" />
    </TableRow>
</TableLayout>
